.tab-strip {
  height: 35px;
  display: flex;
  margin: 0 -1px;
  padding: 0;

  * {
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
  }
}

.tab-strip > li {
  flex: 0 1 160px;
  display: flex;
  align-items: center;
  width: 160px;
  height: 35px;
  border-left: 1px solid #bbb;
  border-right: 1px solid #bbb;
  margin-right: -1px;
  background: #ddd;
  -webkit-app-region: no-drag;

  &.pinned {
    flex: 0 1 40px;
    width: 40px;
    justify-content: center;
  }

  &.dragged {
    flex: 0 0 0;
    position: absolute;
    z-index: 1000;
  }

  &.drop-placeholder {
    background: none;
    border-left: 1px solid rgba(0,0,0,0);
    border-right: 1px solid rgba(0,0,0,0);
  }

  &:not(.active) { color: #888; }
  &:hover { background: #eee; }
  &.active { background: #fff; }

  &.unread {
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-name: blink;
    background: #aaa;
  }
}

@keyframes blink {
  0% { background: #fff; }
  50% { background: #f7c9ae; }
  100% { background: #fff; }
}

.tab-strip > li .icon {
  padding: 0 0.25em;
  width: calc(24px + 0.5em);
  pointer-events: none;
}

.tab-strip > li .label {
  pointer-events: none;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  flex-flow: column;
}

.tab-strip > li .location {
  font-size: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: -4px;

  &:empty { display: none; }
}

.tab-strip > li .name {
  overflow-x: hidden;
  text-overflow: ellipsis;
}

.tab-strip > li .close {
  margin-right: 0.25em;
  width: 20px;
  height: 20px;
  border: none;
  box-shadow: none;
  outline: none;

  background: url(/images/tabs/close.svg) center center no-repeat;
  opacity: 0.5;

  &:hover {
    background-image: url(/images/tabs/close-active.svg);
    opacity: 0.5;
  }

  &:active {
    background-image: url(/images/tabs/close-active.svg);
    opacity: 1;
  }
}
