			"args": [
				"--cwd",
				"./plugins/sparklinlabs/shader/"
			]
		},
    {
			"taskName": "sprite",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/sprite/"
			]
		},
    {
			"taskName": "sound",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/sound/"
			]
		},
    {
			"taskName": "textEditorWidget",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/textEditorWidget/"
