{
	"version": "0.1.0",
	"command": "gulp",
	"suppressTaskName": true,
	"showOutput": "silent",
	"isShellCommand": true,
	"tasks": [
    // Core
    {
			"taskName": "client",
			"args": [
				"--cwd",
				"./client"
			]
		},
		{
			"taskName": "server",
			"args": [
				"--cwd",
				"./server"
			]
		},
    {
			"taskName": "launcher",
			"args": [
				"--cwd",
				"./launcher"
			]
		},
    {
			"taskName": "SupAPI",
			"args": [
				"--cwd",
				"./SupCore"
			]
		},
    {
			"taskName": "SupCore",
			"args": [
				"--cwd",
				"./SupCore"
			]
		},
    {
			"taskName": "SupClient",
      "isBuildCommand": true,
			"args": [
				"--cwd",
				"./SupClient"
			]
		},

    // System
    {
			"taskName": "player",
			"args": [
				"--cwd",
				"./system/player"
			]
		},
    {
			"taskName": "SupEngine",
			"args": [
