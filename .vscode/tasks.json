			"taskName": "SupRuntime",
			"args": [
				"--cwd",
				"./system/SupRuntime"
			]
		},

    // Plugins
    {
			"taskName": "arcadePhysics2D",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/arcadePhysics2D/"
			]
		},
    {
			"taskName": "cubicModel",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/cubicModel/"
			]
		},
    {
			"taskName": "font",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/font/"
			]
		},
    {
			"taskName": "light",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/light/"
			]
		},
    {
			"taskName": "model",
			"args": [
				"--cwd",
				"./plugins/sparklinlabs/model/"
