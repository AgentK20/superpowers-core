@import '../../SupClient/src/styles/reset.styl'
@import '../../SupClient/src/styles/treeView.styl'
@import '../../SupClient/src/styles/dialogs.styl'
@import 'nib'

body
  background #eee
  display flex
  flex-flow column

.pane-buttons
  background #ccc

  > button
    background #aaa
    padding 0.75em 1em
    border none
    text-transform uppercase

    &.active
      background #444
      color #fff
      font-weight bold

    &:not(.active):hover
      background #888
      color #fff

.panes
  flex 1
  display flex
  flex-flow column

  > div
    flex 1

    &:not(.active)
      display none

.panes
  > .servers
    @import 'panes/servers.styl'
  > .settings
    @import 'panes/settings.styl'
  > .community
    @import 'panes/community.styl'

.splash
  @import 'splash/index.styl'
