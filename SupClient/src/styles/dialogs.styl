@import "nib"

.dialog
  width 100%
  height 100%
  z-index 10
  position absolute
  top 0
  left 0
  background-color rgba(128,128,128,0.5)
  display flex

  form
    background-color white
    margin auto
    padding 10px
    width 350px
    display flex
    flex-flow column
    box-shadow 0 0 20px rgba(0,0,0,0.2)

  label, input, select, .group
    margin-bottom 0.5em

  input, select, textarea
    padding 0.125em 0.25em

  .buttons
    display flex
    justify-content flex-end

    button
      margin-left 5px

  .filter-parent
    flex 1
    margin-top 5px
    height 80px
    overflow-y auto

    > div
      display block
      height 20px
      overflow-x hidden
      text-overflow ellipsis
      white-space nowrap

    .selected
      background-color gainsboro
