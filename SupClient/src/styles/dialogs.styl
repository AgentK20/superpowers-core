.dialog
  width 100%
  height 100%
  z-index 1
  position absolute
  top 0
  left 0
  background-color rgba(128,128,128,0.5)
  display flex

  .message
    background-color white
    margin auto
    padding 10px
    width 300px
    height 120px
    display flex
    flex-flow column

  label
    padding-bottom 10px
    flex 1

  input, select
    flex 1

  .buttons
    flex 2
    display flex

    button
      margin 0 5px 0 5px
      flex 1
      align-self flex-end

  .filter-parent
    margin-top 5px
    height 80%
    overflow-y auto

    > div
      display block
      height 20px

    .selected
      background-color gainsboro
